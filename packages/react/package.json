{
  "name": "@ukic/react",
  "sideEffects": [
    "*.css"
  ],
  "version": "2.4.1",
  "description": "React-wrapped web components compiled using StencilJS",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copy:core-css && npm run copy:normalize-css",
    "clean": "rimraf dist",
    "compile": "npm run tsc",
    "tsc": "tsc -p .",
    "rollup": "rollup -c",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "rimraf ./storybook-static && storybook build",
    "audit": "echo 'Audit for: @ukic/react' && audit-ci -m --config ../../audit-ci.json",
    "copy:core-css": "echo 'Copy core.css from: @ukic/web-components' && mkdirp -p ./dist/core && ncp ../web-components/dist/core/core.css ./dist/core/core.css",
    "copy:normalize-css": "echo 'Copy normalize.css from: @ukic/web-components' && ncp ../web-components/dist/core/normalize.css ./dist/core/normalize.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@ukic/fonts": "^2.3.0",
    "@ukic/web-components": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@mdi/js": "^7.2.96",
    "@stencil/react-output-target": "^0.5.3",
    "@storybook/addon-a11y": "^7.4.2",
    "@storybook/addon-actions": "^7.4.2",
    "@storybook/addon-docs": "^7.4.2",
    "@storybook/addon-essentials": "^7.4.2",
    "@storybook/addon-links": "^7.4.2",
    "@storybook/react": "^7.4.2",
    "@storybook/react-webpack5": "^7.4.2",
    "@types/jest": "27.0.3",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "jest": "^27.4.1",
    "jest-dom": "^4.0.0",
    "mkdirp": "^1.0.4",
    "np": "^7.6.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-hook-form": "^7.38.0",
    "react-router-dom": "^6.3.0",
    "storybook": "^7.4.2",
    "typescript": "^4.5.2",
    "webpack": "^5.76.0"
  },
  "peerDependencies": {
    "react": "^16.7.0 || ^17.0.2 || ^18.2.0",
    "react-dom": "^16.7.0 || ^17.0.2 || ^18.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "node_modules",
      "dist"
    ]
  },
  "license": "MIT"
}
